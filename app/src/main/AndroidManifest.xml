<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="shakirateam.tournamentmaker" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Tournament Navigator"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name=".MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Games"/>

        <!--
             ATTENTION: This was auto-generated to add Google Play services to your project for
             App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".teamcreator"
            android:label="@string/title_activity_teamcreator"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>

        <activity
            android:name=".CreationChooser"
            android:theme="@style/AppTheme.PopUpTheme">
        </activity>
        <activity
            android:name=".ImageChooser"
            android:theme="@style/AppTheme.PopUpTheme">
        </activity>
        <activity
            android:name=".TournamentInfo"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".TournamentCreator"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".DeleteTournament"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".AddorRemoveTeamTournament"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".PasswordCheck"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>

    </application>

</manifest>
